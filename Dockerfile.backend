# Dockerfile para backend Node.js
FROM node:18-alpine
WORKDIR /app

# Copiar arquivos de dependências
COPY backend/package*.json ./

# Configurar npm para usar cache e timeout maior, instalar dependências
RUN npm config set registry https://registry.npmjs.org/ && \
    npm config set fetch-timeout 300000 && \
    npm config set fetch-retry-mintimeout 20000 && \
    npm config set fetch-retry-maxtimeout 120000 && \
    npm install --omit=dev --no-audit --no-fund --prefer-offline || \
    npm install --omit=dev --no-audit --no-fund
RUN npm install --save-dev sequelize-cli --no-audit --no-fund

# Copiar código fonte
COPY backend/. .

# Garante que scripts do src/scripts estejam disponíveis
COPY backend/src/scripts ./src/scripts

EXPOSE 3001
CMD ["npm", "run", "start:migrate"]
# Dockerfile para backend Node.js
FROM node:18-alpine
WORKDIR /app

# Copiar arquivos de dependências
COPY backend/package*.json ./

# Instalar dependências com otimizações
RUN apk update && apk add --no-cache curl tzdata && npm install --only=production --no-audit --no-fund
RUN npm install json2csv
RUN npm install --save-dev sequelize-cli --no-audit --no-fund

# Copiar código fonte
COPY backend/. .

# Garante que scripts do src/scripts estejam disponíveis
COPY backend/src/scripts ./src/scripts

EXPOSE 3001
CMD ["npm", "run", "start:migrate"]
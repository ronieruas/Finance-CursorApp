# Dockerfile para backend Node.js
FROM node:20-alpine
WORKDIR /app

# Copiar arquivos de dependências
COPY backend/package*.json ./

# Usar mirror do npm por padrão para reduzir falhas de DNS
ENV npm_config_registry=https://registry.npmmirror.com

# Configurar npm para usar cache e timeout maior, instalar dependências com fallback
RUN npm config set fetch-timeout 300000 && \
    npm config set fetch-retry-mintimeout 20000 && \
    npm config set fetch-retry-maxtimeout 120000 && \
    npm install --registry=$npm_config_registry --omit=dev --no-audit --no-fund --prefer-offline || \
    npm install --registry=https://registry.npmjs.org --omit=dev --no-audit --no-fund
RUN npm install --save-dev sequelize-cli --registry=$npm_config_registry --no-audit --no-fund || \
    npm install --save-dev sequelize-cli --registry=https://registry.npmjs.org --no-audit --no-fund

# Copiar código fonte
COPY backend/. .

# Garante que scripts do src/scripts estejam disponíveis
COPY backend/src/scripts ./src/scripts

# Garante que services do src/services estejam disponíveis
COPY backend/src/services ./src/services

EXPOSE 3001
CMD ["npm", "run", "start:migrate"]
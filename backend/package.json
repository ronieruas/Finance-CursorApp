{
  "name": "finance-backend",
  "version": "1.0.0",
  "description": "Backend para aplicação de gestão financeira pessoal.",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "start:migrate": "node src/server.js",
    "migrate": "npx sequelize db:migrate",
    "migrate:undo": "npx sequelize db:migrate:undo",
    "migrate:undo:all": "npx sequelize db:migrate:undo:all",
    "seed": "npx sequelize db:seed:all",
    "seed:undo:all": "npx sequelize db:seed:undo:all",
    "clear-data": "npx sequelize db:seed --seed 20240816000000-clear-all-data.js",
    "db:backup": "node src/scripts/backup.js",
    "db:restore": "node src/scripts/restore.js",
    "db:drop-all": "npx sequelize db:drop",
    "db:create-all": "npx sequelize db:create",
    "db:migrate-all": "npx sequelize db:migrate",
    "db:seed-all": "npx sequelize db:seed:all",
    "reset-db": "npm run db:drop-all && npm run db:create-all && npm run db:migrate-all && npm run db:seed-all",
    "normalize:paid_at": "node scripts/normalize_paid_at.js",
    "normalize:paid_at:apply": "node scripts/normalize_paid_at.js --apply",
    "process-expenses": "node src/scripts/processExpenses.js"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "json-2-csv": "^5.5.9",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-cron": "^4.2.1",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "sequelize-cli": "^6.6.3"
  }
}
